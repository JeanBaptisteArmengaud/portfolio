{% extends 'base.html.twig' %}

{% block title %}
    <title>Jean-Baptiste Armengaud</title>
{% endblock %}

{% block presentation_menu %}

{% endblock %}

{% block body %}
<div class="container px-5">
    <!-- Projects Section-->
    <section class="py-5">
        <div class="text-center mb-5">
            <h1 class="mb-0">Projets</h1>
        </div>
        <div class="col-12">
            <!-- Project Card 1-->
            <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                <div class="row g-0 flex-column-reverse flex-lg-row">
                    <div class="col-12 col-lg-8">
                        <div class="card-body text-center text-lg-start">
                            <h2 class="card-title fw-bolder">Watch'art</h2>
                            <h4 class="subheading">Projet de fin de formation</h4>
                            <p class="card-text">Voici un exemple de texte pour accompagner l'image. Vous pouvez ajouter plus de contenu ici.</p>
                            <p class="card-text"><small class="text-muted">Dernière mise à jour il y a 3 minutes</small></p>
                            <div class="d-grid gap-2 d-md-block">
                                <a class="btn btn-primary btn-lg px-5 py-3 fs-6 fw-bolder" href="/watchart" target="_blank"><i class="fa-solid fa-arrow-up-right-from-square"></i>&nbsp;Accéder au site</a>
                                <a class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" href="">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <img src="{{ asset('assets/img/logo_White.png')}}" class="img-fluid rounded-start w-100" alt="logo_watchart" data-bs-toggle="modal" data-bs-target="#imageModal">
                    </div>
                </div>
            </div>
            
            <!-- Project Card 2 -->
            <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                <div class="row g-0 flex-column flex-lg-row">
                    <div class="col-12 col-lg-4">
                        <img src="{{ asset('assets/img/prog_cine_liste_films.png')}}" class="img-fluid rounded-start w-100" alt="logo_watchart" data-bs-toggle="modal" data-bs-target="#imageModal">
                    </div>
                    <div class="col-12 col-lg-8">
                        <div class="card-body text-center text-lg-start">
                            <h2 class="card-title fw-bolder">Outil de programmation de séances de cinéma</h2>
                            <h4 class="subheading">Projet personnel</h4>
                            <p class="card-text">Voici un exemple de texte pour accompagner l'image. Vous pouvez ajouter plus de contenu ici.</p>
                            <p class="card-text"><small class="text-muted">Dernière mise à jour il y a 3 minutes</small></p>
                            <div class="d-grid gap-2 d-md-block">
                                <a class="btn btn-primary btn-lg px-5 py-3 fs-6 fw-bolder" href="/calendar" target="_blank"><i class="fa-solid fa-arrow-up-right-from-square"></i>&nbsp;Accéder au site</a>
                                <a class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" href="">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block modales %}
    <!-- Modale image -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img src="{{ asset('assets/img/prog_cine_liste_films.png') }}" class="img-fluid" alt="Image" id="modalImage">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
