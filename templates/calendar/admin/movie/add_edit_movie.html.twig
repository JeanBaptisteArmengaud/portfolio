{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}

    <div class="container">
        <h1>{{ '/new' in app.request.requestUri ? 'Ajouter' : 'Modifier' }} un film</h1>
        <div class="py-4">
            <a class="btn btn-outline-primary" href="{{ path('app_calendar_admin_movie') }}">Retour vers l'accueil</a>
        </div>
        
        <div class="row align-items-start">
            {{ include('calendar/admin/movie/_form.html.twig') }}
        
            <div class="col-4 text-center">
                
                <img src="" class="movie-poster">
                
                {% if app.request.get('_route') == 'app_calendar_admin_edit_movie' %}
                    <div>
                        {{ include('calendar/admin/movie/_delete_form.html.twig') }}
                    </div>
                {% endif %}
                
            </div>
        
        </div>
    </div>

    <script src="{{ asset('js/calendar/components/movies/moviePoster.js') }}"></script>
    <script src="{{ asset('js/calendar/components/movies/addWeek.js') }}"></script>
{% endblock %}
