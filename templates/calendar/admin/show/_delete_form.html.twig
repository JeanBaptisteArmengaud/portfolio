<form class="d-inline-block" method="post" action="{{ path('app_calendar_delete_show', {'id': show.id}) }}" onsubmit="return confirm('Supprimer la séance ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ show.id) }}">
	
	{% if app.request.get('_route') == 'app_calendar_movie_shows' %}
		<div class="btn-group">
			<button type="button" class="btn btn-sm btn-danger dropdown-toggle"
					data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<i class="bi bi-trash" aria-hidden="true"></i>
			</button>
			<ul class="dropdown-menu">
				<li><button class="dropdown-item" type="submit">Oui, je veux supprimer</button></li>
				<li><a class="dropdown-item" href="#" data-bs-toggle="dropdown">Oups !</a></li>
			</ul>
		</div>
		
	{% else %}
		<button class="btn btn-danger mt-2">Supprimer la séance</button>
	{% endif %}
</form>


