{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}

    <div class="container">
        <h1>{{ '/new' in app.request.requestUri ? 'Ajouter' : 'Modifier' }} une séance</h1>
        <div class="py-4">
            <a class="btn btn-outline-primary" href="{{ path('app_calendar_movie_shows', {id: show.movie.id}) }}">Retour vers la liste des séances</a>
        </div>
    
        <div class="row align-items-start">
            {{ include('calendar/admin/show/_form.html.twig') }}
            <div class="col-lg-6 text-center">
                
                <img class="p-4 movie-poster" src="{{ show.movie.poster }}" alt="{{ 'Affiche du film : ' ~ show.movie.title }}" >
                
                {% if app.request.get('_route') == 'app_calendar_edit_show' %}
                <div>
                    {{ include('calendar/admin/show/_delete_form.html.twig') }}
                </div>
                {% endif %}
    
            </div>
        </div>
        
    </div>

{% endblock %}
